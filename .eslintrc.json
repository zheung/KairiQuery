{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [ "warn", "tab" ],
		"linebreak-style": [ "error", "windows" ],
		"quotes": [ "error", "single" ],
		"semi": [ "error", "always" ],
		"no-unused-vars": [ "warn", { "vars": "all", "args": "after-used" } ],
		"no-console": [ "warn" ]
	},
	"globals": {
		"_c": true,
		"_l": true,
		"_d": true,

		"fs": true,
		"path": true,
		"qs": true,

		"koa": true,
		"koaRouter": true,

		"CleanCSS": true,
		"UglifyJS": true
	}
}